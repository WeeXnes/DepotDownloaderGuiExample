<Window x:Class="DepotDownloaderGuiExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DepotDownloaderGuiExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Content="Steam Login Name"/>
            <TextBox Name="loginName"/>
            <Label Content="Password"/>
            <TextBox Name="loginPassword"/>
            <Label Content="AppId"/>
            <TextBox Name="appId"/>
            <Label Content="DepotId"/>
            <TextBox Name="depotId"/>
            <Label Content="ManifestId"/>
            <TextBox Name="manifestId"/>
            <Label Content="Directory"/>
            <TextBox Name="directory"/>
            <Button Content="Start Download" Click="ButtonBase_OnClick"/>
            <ProgressBar Name="downloadProgress" Minimum="0" Maximum="100" Height="20"/>
        </StackPanel>
    </Grid>
</Window>
